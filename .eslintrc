{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "jsx",
    "react"
  ],
  "rules": {
    "jsx/uses-factory": [
      1,
      {
        "pragma": "JSX"
      }
    ],
    "jsx/mark-used-vars": "warn",
    "jsx/no-undef": "warn",
    "react/prop-types": "warn",
    "no-console": "warn",
    "space-before-blocks": "warn",
    "arrow-spacing": "warn",
    "keyword-spacing": "warn",
    "space-infix-ops": "warn",
    "space-in-parens": "warn",
    "spaced-comment": "warn",
    "space-before-function-paren": "warn",
    "semi": "warn",
    "quotes": [
      "error",
      "single"
    ],
    "no-multiple-empty-lines": "warn"
  }
}